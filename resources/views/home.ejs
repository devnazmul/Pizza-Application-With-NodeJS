    <!--                  HERO_SECTION                 -->
    <section id="menu" class="hero py-16 px-5">
        <div class="container mx-auto flex items-center justify-between">
            <div class="w-1/2">
                <h6 class="text-lg font-light"><em>Feeling Hungry?</em></h6>
                <h1 class="text-8xl font-bold">Don't Worry !</h1>
                <a href='/menu' class="primary-btn inline-block cart-btn px-10 py-1 my-5 rounded-full">Order Now</a>
            </div>
            <div class="w-1/2">
                <img class="heroImg" src="img/hero-img.png" alt="pizza-hero">
            </div>
        </div>
    </section>

    <!--                  MENU_SECTION                 -->
    <section id="menu" class="menu py-8 px-10 mx-auto">
        <h1 class="primary-h text-xl font-bold mb-5">All Items</h1>
        <hr class="mb-10">
        <div class="mt-5 container grid grid-cols-4 gap-12">
            <% pizzas.forEach( function(pizza){ %>
                <div class="card rounded-lg w-64 text-center">
                    <img class="h-40 mb-4 mx-auto" src="img/<%= pizza.image %>" alt="">
                    <div>
                        <h2 class="text-lg  mb-4 font-bold"><%= pizza.name %></h2>
                        <span class=" pizza-size font-light  py-1 px-6 rounded-full uppercase text-xs"><%= pizza.size %></span>
                        <div class="flex items-center justify-around my-5">
                            <p class="font-bold">$<%= pizza.price %></p>
                            <button class="secondary-btn px-6 py-1 rounded-full flex items-center font-bold"><span>+ </span> Add</button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>